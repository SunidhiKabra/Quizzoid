<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/scripts.ejs%>
    <% include partials/title.ejs%>
    <script>
      $(document).ready(function() {
        $("#login_form").on('submit', function(e) {
          e.preventDefault();
          var user = null;
          $.ajax({
            type: $(this).prop('method'),
            url : $(this).prop('action'),
            data: $(this).serialize(),
            success:
                function(result) {
                  console.log(result);
                    if(result.status==200){
                      window.location.href = '/home_page';
                    }
                    else{
                    }
                },
               error:
                function(result) {
                    alert("Something went wrong. Try again! ");
                    window.location.href = '/log_in';
                   }
               })
            });
        });
      </script>
  </head>
  <body>
    <% include partials/headerForOthers.ejs%>
    <div class="container">
      <div class="container3">
        <form id="login_form" action="/sign_in" method="post">
          <div class="form-group margin10">
            <label class="control-label col-sm-2">Username:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
            </div>
          </div>
          <br>
          <div class="form-group margin10">
            <label class="control-label col-sm-2">Password:</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
            </div>
          </div>
          <br>
          <button type="submit" class="btn btn-default btn1 margin10">Submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
