<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/scripts.ejs%>
    <% include partials/title.ejs%>
    <script>
      $(document).ready(function() {
        $("#sign_up_form").on('submit', function(e) {
          e.preventDefault();
          $.ajax({
            type: $(this).prop('method'),
            url : $(this).prop('action'),
            data: $(this).serialize(),
            success:
                function(result) {
                    if(result.status==200){
                        window.location.href = '/successful_sign_up';
                    }
                },
               error:
                function(result) {
                    alert("Something went wrong. Try again!");
                    window.location.href = '/sign_up';
                   }
               })
            });
        });
      </script>
  </head>
  <body>
    <% include partials/headerForOthers.ejs%>
    <div class="container">
      <div class="container3">
        <form id="sign_up_form" action="/sign_up" method="post">
          <div class="form-group margin10">
            <label class="control-label col-sm-2">Name:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required>
            </div>
          </div>
          <br>
          <div class="form-group margin10">
            <label class="control-label col-sm-2">Username:</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
            </div>
          </div>
          <br>
          <div class="form-group margin10">
            <label class="control-label col-sm-2">Password:</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
            </div>
          </div>
          <br>
          <button type="submit" class="btn btn-default btn1 margin10">Submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
